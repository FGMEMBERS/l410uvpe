<!--

L410 GEAR INDICATOR (nas!)

 -->

<PropertyList>
 <name>Gear Indicator</name>
 <w-base>96</w-base>
 <h-base>96</h-base>

 <layers>
  <layer>
   <name>Pozadi s letadylkem</name>
   <texture>
    <path>Aircraft/l410uvpe/Instruments/Textures/l410-gearw.rgb</path>
    <x1>0.0</x1>
    <y1>0.25</y1>
    <x2>0.75</x2>
    <y2>1.0</y2>
   </texture>
  <w>96</w>
  <h>96</h>
  </layer>

  <layer>
   <name>glare shield</name>
   <texture>
    <path>Aircraft/l410uvpe/Instruments/Textures/bezel1.rgb</path>
    <x1>0.5</x1>
    <y1>0.0</y1>
    <x2>1.0</x2>
    <y2>0.5</y2>
   </texture>
  <w>96</w>
  <h>96</h>
 <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>1</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>-1</offset>
    </transformation>
    </transformations>
  </layer>

<!-- svetylka  -->

<!-- LEVY PODVOZEK -->
    <layer>
    <type>switch</type>
    <layer>
          <condition>
 	  <and>
		 <greater-than>
           <property>/systems/electrical/outputs/cwd-airframe</property>
		   <value>10</value>
		 </greater-than>
           <or>
             <and>
             <greater-than>
                <property>/gear/gear[1]/position-norm</property>
                <value>0.0</value>
             </greater-than>
             <less-than>
                <property>/gear/gear[1]/position-norm</property>
                <value>1.0</value>
             </less-than>
             </and>
              <property>/controls/switches/chck-airframe-sw</property>
            </or>
			</and>
          </condition> 
           <name>on</name>
          <texture>
            <path>Aircraft/l410uvpe/Instruments/Textures/l410-gearw.rgb</path>
            <x1>0.0625</x1>   <!-- cervena S -->
            <y1>0.1445</y1>
            <x2>0.1367</x2>
            <y2>0.2188</y2>
          </texture>
          <w>10</w>
          <h>10</h>
		  <emissive>true</emissive>
    </layer>
    <layer>
           <name>off</name>
          <texture>
            <path>Aircraft/l410uvpe/Instruments/Textures/l410-gearw.rgb</path>
            <x1>0.0625</x1>   <!-- cervena T -->
            <y1>0.0469</y1>
            <x2>0.1367</x2>
            <y2>0.1172</y2>
          </texture>
          <w>10</w>
          <h>10</h>
    </layer>
          <transformations>
            <transformation>
              <type>x-shift</type>
              <offset>-24</offset>
            </transformation>
            <transformation>
              <type>y-shift</type>
              <offset>2</offset>
            </transformation>
          </transformations>
    </layer>

