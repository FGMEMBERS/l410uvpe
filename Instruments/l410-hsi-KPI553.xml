<?xml version="1.0"?>

<!--
HSI instrument

nase KPI 553 A HSI
-->

<PropertyList>
   <name>HSI</name>
   <w-base>130</w-base>
   <h-base>104</h-base>


   <layers>

      <layer>
         <name>background</name>
         <texture>
	          <path>Aircraft/l410uvpe/Instruments/Textures/l410-kpi553.rgb</path>
	          <x1>0.289</x1>
	          <y1>0.082</y1>
	          <x2>0.398</x2>
	          <y2>0.296</y2>
         </texture>
         <w>98</w>
         <h>98</h>
      </layer>
      
      <!--  DME -->
      <!-- distance -->

      <layer>
         <name>display</name>
   <condition>
		 <greater-than>
           <property alias="../../../../../params/electrical-power"/>
		   <value>10</value>
		 </greater-than>
   </condition>
         <type>switch</type>
         <layer>
            <condition>
               <not>
                  <property alias="../../../../../../params/dme-in-range"/>   
               </not>
            </condition>
            <name>on</name>
            <type>text</type>
            <font>led</font>
            <point-size>5</point-size>
            <color>
               <red>1.0</red>
               <green>0.5</green>
               <blue>0.0</blue>
            </color>
            <chunks>
               <chunk>
                  <type>literal</type>
                  <text>--.-</text>
               </chunk>
            </chunks>
         </layer>
         <layer>
            <name>off</name>
            <type>text</type>
            <font>led</font>
            <point-size>5</point-size>
            <color>
               <red>1.0</red>
               <green>0.5</green>
               <blue>0.0</blue>
            </color>
            <chunks>
               <chunk>
                  <type>number-value</type>
                  <property alias="../../../../../../params/dme-indicated-distance-nm"/>
                  <format>%04.1f</format>
               </chunk>
            </chunks>
         </layer>
         <transformations>
            <transformation>
               <type>x-shift</type>
               <offset>-40</offset>
            </transformation>
            <transformation>
               <type>y-shift</type>
               <offset>35</offset>
            </transformation>
         </transformations>
      </layer>

      <!-- ground speed -->
      <layer>
         <name>ground speed towards station</name>
   <condition>
		 <greater-than>
           <property alias="../../../../../params/electrical-power"/>
		   <value>10</value>
		 </greater-than>
   </condition>
         <type>switch</type>
         <layer>
            <condition>
               <not>
                  <property alias="../../../../../../params/dme-in-range"/>   
               </not>
            </condition>
            <name>display</name>
            <type>text</type>
            <font>led</font>
            <point-size>5</point-size>
            <color>
               <red>1.0</red>
               <green>0.5</green>
               <blue>0.0</blue>
            </color>
            <chunks>
               <chunk>
                  <type>literal</type>
                  <text>---</text>
               </chunk>
            </chunks>
         </layer>

         <layer>
            <condition>
               <greater-than>
                  <property alias="../../../../../../params/indicated-ground-speed-kt"/>
                  <value type="double">999</value>
               </greater-than>
            </condition>
            <name>display</name>
            <type>text</type>
            <font>led</font>
            <point-size>5</point-size>
            <color>
               <red>1.0</red>
               <green>0.5</green>
               <blue>0.0</blue>
            </color>
            <chunks>
               <chunk>
                  <type>literal</type>
                  <text>999</text>
               </chunk>
            </chunks>
         </layer>

         <layer>
            <type>text</type>
            <font>led</font>
            <point-size>5</point-size>
            <color>
               <red>1.0</red>
               <green>0.5</green>
               <blue>0.0</blue>
            </color>
            <chunks>
               <chunk>
                  <type>number-value</type>
                  <property alias="../../../../../../params/indicated-ground-speed-kt"/>
                  <format>%03.0f</format>
               </chunk>
            </chunks>
         </layer>
         <transformations>
            <transformation>
               <type>x-shift</type>
               <offset>-3</offset>
            </transformation>
            <transformation>
               <type>y-shift</type>
               <offset>35</offset>
            </transformation>
         </transformations>
      </layer>
   
